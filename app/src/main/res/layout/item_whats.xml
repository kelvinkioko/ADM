<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp"
    android:background="#f2f3f4">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="3dp"
        app:cardCornerRadius="2dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <ImageView
                android:id="@+id/whats_image_clear"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerInside"/>

            <RelativeLayout android:id="@+id/whats_pending"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_centerInParent="true"
                    android:elevation="5dp" android:layout_marginEnd="16dp" android:layout_marginStart="16dp">

                <com.download.manager.video.whatsapp.widgets.progressbar.RoundCornerProgressBar
                        android:id="@+id/whats_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        app:rcBackgroundColor="@color/transparent"
                        app:rcMax="100"
                        app:rcProgress="0"
                        app:rcProgressColor="#5500b1b0"
                        app:rcRadius="0dp" android:visibility="gone"/>

                <ImageView
                        android:id="@+id/whats_download"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/icon_download"
                        android:layout_weight="1"
                        android:padding="6dp"/>

            </RelativeLayout>

            <ImageView
                    android:id="@+id/whats_type"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="8dp"
                    app:srcCompat="@drawable/icon_image"/>

            <TextView android:id="@+id/whats_id" android:visibility="gone"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>