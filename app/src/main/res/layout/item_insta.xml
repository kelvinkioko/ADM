<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp"
    android:background="#f2f3f4">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp"
        app:cardCornerRadius="2dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout android:id="@+id/insta_parent"
                    android:layout_width="match_parent"
                    android:layout_height="150dp">

                <ImageView
                        android:id="@+id/insta_image_clear"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="centerInside"/>

                <ImageView
                        android:id="@+id/insta_type"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="8dp"
                        app:srcCompat="@drawable/icon_image"/>

            </RelativeLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:alpha="0.6"
                    android:background="@drawable/toolbar_reverse"
                    android:layout_below="@id/insta_parent" />

            <RelativeLayout android:id="@+id/insta_pending"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_centerInParent="true"
                    android:layout_below="@id/insta_parent">

                <com.download.manager.video.whatsapp.widgets.progressbar.RoundCornerProgressBar
                        android:id="@+id/insta_progress"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        app:rcBackgroundColor="@color/transparent"
                        app:rcMax="100"
                        app:rcProgress="0"
                        app:rcProgressColor="#5500b1b0"
                        app:rcRadius="0dp" android:visibility="visible"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:maxLines="2"
                            android:textSize="15sp"
                            android:text="Pending download"
                            android:layout_weight="1"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:gravity="center_vertical"
                            android:visibility="gone"
                            android:textColor="@color/primary_text"/>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_horizontal|center_vertical">

                        <ImageView
                                android:id="@+id/insta_download"
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                app:srcCompat="@drawable/icon_download"
                                android:layout_weight="1"
                                android:padding="6dp"/>

                        <ImageView
                                android:id="@+id/insta_pause"
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                app:srcCompat="@drawable/icon_pause"
                                android:layout_weight="1"
                                android:padding="6dp"
                                android:visibility="gone"/>

                        <ImageView
                                android:id="@+id/insta_play"
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                app:srcCompat="@drawable/icon_play"
                                android:layout_weight="1"
                                android:padding="6dp"
                                android:visibility="gone"/>

                        <ImageView
                                android:id="@+id/insta_cancel"
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                app:srcCompat="@drawable/icon_delete"
                                android:layout_weight="1"
                                android:padding="6dp"/>

                        <ImageView
                                android:id="@+id/insta_error"
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                app:srcCompat="@drawable/icon_error"
                                android:layout_weight="1"
                                android:padding="6dp"
                                android:visibility="gone"/>

                        <ImageView
                                android:id="@+id/insta_success"
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                app:srcCompat="@drawable/icon_success"
                                android:layout_weight="1"
                                android:padding="6dp"
                                android:visibility="gone"/>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <TextView android:id="@+id/insta_id" android:visibility="gone"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>