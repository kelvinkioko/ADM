    <View android:layout_width="match_parent" android:alpha="0.6" android:layout_height="4dp" android:background="@drawable/toolbar_shadow"/>

    <View android:layout_width="match_parent" android:alpha="0.6" android:layout_height="4dp" android:background="@drawable/toolbar_reverse" android:layout_alignParentBottom="true"/>

